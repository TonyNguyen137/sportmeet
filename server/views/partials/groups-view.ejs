<section id="view-groups" class="hidden">
	<div class="flex flex-col justify-between gap-x-4 gap-y-3 md:flex-row md:items-center">
		<div>
			<h2 class="text-h1 text-dark font-bold">Gruppenverwaltung</h2>
			<p>Verwalte deine Freundeskreise fÃ¼r private Termine</p>
		</div>
		<div class="flex flex-col gap-3 lg:flex-row">
			<button
				data-sp-toggle="display"
				data-sp-target="#group-form"
				data-sp-close-btn=".close-group-form"
				data-open-modal
				class="bg-accent-blue shadow-accent-dark-blue/30 hover:bg-accent-dark-blue flex w-full shrink-0 cursor-pointer items-center gap-[8px] rounded-md px-[24px] py-[12px] text-white shadow-lg transition-colors [--focus-color:var(--color-body)] md:w-fit">
				<svg width="20" height="20" aria-hidden="true" class="block">
					<use href="<%= publicPrefix + '/' + assets['sprite.svg'] + '#plus' %>"></use>
				</svg>
				<span> Gruppe erstellen</span>
			</button>
			<button
				data-sp-toggle="display"
				data-sp-target="#group-enter-form"
				data-sp-close-btn=".close-enter-form"
				data-open-modal
				class="bg-accent-blue shadow-accent-dark-blue/30 hover:bg-accent-dark-blue flex w-full shrink-0 cursor-pointer items-center gap-[8px] rounded-md px-[24px] py-[12px] text-white shadow-lg transition-colors [--focus-color:var(--color-body)] md:w-fit">
				<svg width="20" height="20" aria-hidden="true" class="block">
					<use href="<%= publicPrefix + '/' + assets['sprite.svg'] + '#link' %>"></use>
				</svg>
				<span> Gruppe beitreten</span>
			</button>
		</div>
	</div>

	<div class="pane mt-6">
		<% if (Array.isArray(userGroups) && userGroups.length > 0) { %> <%-
		include("./groups", { groups: userGroups }) %> <% } else { %>
		<div class="mx-auto flex max-w-[50ch] flex-col items-center gap-3 text-center">
			<%- include("./empty-group-list") %>
		</div>
		<% } %>
	</div>
</section>
